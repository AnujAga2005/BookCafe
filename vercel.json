{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  
  "functions": {
    "src/backend/server.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ]
}
